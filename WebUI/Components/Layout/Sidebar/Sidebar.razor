@using Lumium.Photos.WebUI.Components.Utility
@using Microsoft.AspNetCore.Components.Routing

<IdGroup Context="id">
    <nav class="sidebar offcanvas-start offcanvas-md" tabindex="-1" id="@id">
        <div class="offcanvas-header border-bottom border-secondary border-opacity-25">
            <NavLink class="sidebar-brand" href="/">
                Lumium Photos
            </NavLink>
            <button
                type="button"
                class="btn-close d-md-none"
                data-bs-dismiss="offcanvas"
                aria-label="Close"
                data-bs-target="@id.Selector"
            />
        </div>
        <div class="offcanvas-body">
            <ul class="sidebar-nav">
                @ChildContent
            </ul>
        </div>
    </nav>
    <button type="button" data-bs-toggle="offcanvas" data-bs-target="@id.Selector" class="btn btn-secondary d-md-none">
        <i class="fa-light fa-sidebar me-1"></i>
        Sidebar
    </button>
</IdGroup>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; } = null;
}